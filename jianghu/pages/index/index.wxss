/**index.wxss**/

.container{background-color: #f5f5f5;}
.mt20{margin-bottom: 20rpx;}
/* .banner{width:100%;} */
.address{height:52rpx;line-height: 52rpx;background:rgba(0,0,0,0.5);position: fixed;top:0;left: 0;border-radius:0 30rpx 30rpx 0;color:#fff;font-size:24rpx;z-index:999999}
.address .add-info{display:inline-block;margin-left:10rpx;padding-right:20rpx;}
.address .icon-map{padding-left:15rpx;display: inline;font-size:24rpx;}
/** 滚动信息 */
.swiper-box{width:100%;padding:0 26rpx;box-sizing: border-box;background:#fff;}
.swiper-box text{font-size:24rpx;color:#999;line-height: 75rpx;}
.swiper-box image{width:28rpx;height:32rpx;margin-right:10rpx;}
.swiper-box swiper{height:75rpx;margin-left:23rpx;padding-left:20rpx;position: relative;box-sizing:border-box}
.swiper-box swiper text{display: inline-block;width:100%;color:#666;}
.swiper-box swiper:after{position: absolute;content:"";width:1rpx;height:30%;left:0;top:26rpx;background:#e2e2e2;transform: scaleX(0.5)}
.swiper-box .dt-info{width:80rpx;height:36rpx;line-height: 36rpx;text-align:center;font-size:24rpx;color:#30c180;border:1rpx solid #30c180;border-radius:8rpx;}
/** 数据展示 */
.inda-list{width:100%;padding: 30rpx 40rpx;box-sizing: border-box;position: relative;background:#fff;}
.inda-list::after{position: absolute;content:"";width:100%;height:1rpx;left:0;top:0;background:#e2e2e2;transform: scaleY(0.5)}
.inda-list view{flex-direction: column;}
.inda-list view text{font-size:24rpx;color:#333;margin-bottom: 15rpx;}
.inda-list view text.f60{font-size:24rpx;color:#f60;font-weight: bold;}
.info-tit{width:100%;text-align: center;height:95rpx;line-height:95rpx;font-size:28rpx;color:#30c180;font-weight:bold;background:url(http://img.pccoo.cn/images/zx.png) no-repeat center center;background-size:contain}
/* 实时助推、发布信息 */
.zt, .fb{background:rgba(0,0,0,0.8);color:#fff;position:fixed;box-sizing:border-box;}
.zt{left:0;bottom:115rpx;width:435rpx;height:85rpx;padding-left:20rpx;border-radius:0 50rpx 50rpx 0;}
.zt swiper{height:85rpx;}
.zt swiper text{font-size:28rpx;line-height:85rpx;}
.zt image{width:65rpx;height:65rpx;margin-right:15rpx;}
.fb{left:0;bottom:25rpx;width:350rpx;height:72rpx;line-height:72rpx;padding-left:15rpx;border-radius:0 36rpx 36rpx 0}
.fb swiper{height:72rpx;}
.fb swiper text{font-size:24rpx;line-height:72rpx;}
.fb image{width:55rpx;height:55rpx;margin-right:15rpx;}


