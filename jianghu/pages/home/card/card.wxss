.container{background:#f5f5f5;}
.container.bg-fff{background:#fff;}
.item{width:100%;padding:0 26rpx;box-sizing:border-box;background:#fff;margin-bottom:20rpx;}
.item-tit{width:100%;position: relative;font-size:24rpx;line-height:24rpx;padding-top:40rpx;}
.bh{color:#333;}
.nmb{color:#333;font-weight:bold;margin-right:20rpx;}
.time{color:#ccc;}
.state{position: absolute;right:0;color:#30c080;width:100rpx;text-align:right;}
.item-content{width:100%;padding-top:25rpx;}
.item-content .con-txt{font-size:28rpx;color:#333;line-height:45rpx;margin-bottom:20rpx;}
.item-content image{width:100%;}
.money-info{font-size:24rpx;color:#999;padding:30rpx 0;line-height:24rpx;}
.money-info .i-money{color:#333;font-weight:bold;}
.money-info .small{font-weight:normal;}
.surplus-money{width:100%;height:90rpx;background:#f5f5f5;margin-bottom:30rpx;}
.surplus-money view{width:50%;line-height:90rpx;color:#999;text-align:center;font-size:24rpx;overflow: hidden;white-space: nowrap;text-overflow: ellipsis;position: relative;}
.surplus-money view:not(:last-of-type)::after{position: absolute;content:'';right:0;top:25%;width: 1rpx;height:50%;background:#e2e2e2;}
.surplus-money text{color:#f60;}
/** 底部按钮 */
.continue{width:100%;height:56rpx;padding-bottom:30rpx;justify-content: flex-end;}
.continue text{padding:0 30rpx;height:54rpx;line-height:54rpx;text-align:center;border:1rpx solid #666;font-size:24rpx;color:#666;border-radius:30rpx;margin-left:20rpx;}
.continue .f60{color:#f60;border-color:#f60;}
/** 空数据 */
.empty{width:100%;}
.empty image{width:185rpx;height:140rpx;margin:300rpx 0 35rpx;}
.empty view{font-size:24rpx;color:#ccc;}
.empty view text{color:#4f9dff;text-decoration-line: underline;}
/*pop*/
.pop-zhezhao{width:100%;height:100%;position:fixed;top:0;left:0;z-index:1000;background:#000;opacity:0.8;overflow:hidden;}
.pop-box{position:fixed;z-index:1001;left: 0;top: 0;width:100%;height:100%;}
.pop-box .top{width:500rpx;background:#fff;border-radius:15px;}
.pop-box .top .tit{font-size:16px;font-weight:bold;color:#333;text-align:center;padding-top:40rpx;display:block;}
.pop-box .top .txt1{font-size:14px;color:#999;line-height:20px;display:block;padding:0 40rpx;margin:40rpx 0;}
.pop-box .top .txt2{font-size:14px;color:#999;line-height:20px;display:block;margin:50rpx 0;text-align: center;}
.pop-box .top .txt2 .num{color:#333;font-weight:bold;margin:0 5px;}
.pop-box .top .txt-box{margin:20rpx 0 30rpx;}
.pop-box .top .txt{font-size:14px;color:#999;line-height:20px;display:block;text-align:center;}
.pop-box .top image{width:187rpx;height:187rpx;margin:0 auto 40rpx auto;display:block;}
.pop-box .btn{width:100%;height:90rpx;line-height:90rpx;text-align:center;color:#30c080;font-size:20px;position:relative;}
.pop-box .btn::after{position:absolute;content:"";width:100%;height:1px;top:0;left:0;background:#e2e2e2;transform:scaleY(.5);-webkit-transform:scaleY(.5);}
.pop-box .btn-cancle{color:#999;position: relative;}
.pop-box .btn-cancle::after{position:absolute;content:"";height:100%;width:1px;top:0;left:0;background:#e2e2e2;transform:scaleX(.5);-webkit-transform:scaleX(.5);}
.pop-box .btn-cancle1{color:#999;position: relative;}
.pop-box .btn-cancle1::after{position:absolute;content:"";height:100%;width:1px;top:0;right:0;background:#e2e2e2;transform:scaleX(.5);-webkit-transform:scaleX(.5);}


