.container{padding: 0 26rpx;box-sizing:border-box;}
.bold{font-weight:bold;}
.cost{width:100%;height:98rpx;line-height:98rpx;text-align:center;border-bottom:1rpx solid #e2e2e2;font-size:28rpx;color:#666;}
.cost text{color:#333;}
.fill-item{width:100%;height:98rpx;line-height:98rpx;font-size:28rpx;margin-bottom:40rpx;border-bottom:1rpx solid #e2e2e2;}
.fill-item .txt{text-align:right;color:#ccc;margin-right:20rpx;}
.fill-item .switch{width:100rpx;height:50rpx;background:#e2e2e2;border-radius:30rpx;}
.fill-item .switch.on{background:#30c187;}
.fill-item .switch .circular{width:40rpx;height:38rpx;background:#fff;border-radius:50%;position: relative;left:10rpx;}
.fill-item .switch .circular.on{position: relative;left:50rpx;}
.btn{width:100%;line-height:80rpx;text-align:center;color:#fff;margin-bottom:30rpx;}
.btn view:nth-child(1){width:260rpx;height:80rpx;background:#59cd99;border-radius:15rpx;}
.btn view:nth-child(2){width:360rpx;height:80rpx;background:#30c080;border-radius:15rpx;}
.explain{font-size:24rpx;color:#999;line-height:36rpx;}
.examples{width:600rpx;margin:30rpx auto;}