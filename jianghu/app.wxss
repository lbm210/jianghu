/**app.wxss**/
@import "iconfont.wxss";
@import "pages/template/template.wxss";

.disflex{display: flex;}
.fd-c{flex-direction: column;}
.j-c{justify-content: center;}
.j-a{justify-content: space-around;}
.j-b{justify-content: space-between;}
.a-c{align-items: center;}
.a-a{align-items: space-around;}
.a-b{align-items: space-between;}
.flexn{flex:1;}
.ellipsis{overflow: hidden;white-space: nowrap;text-overflow: ellipsis;}
button{margin: 0;}
.container {height: 100%;display: flex;flex-direction: column;justify-content: space-between;box-sizing: border-box;}
.banner{width:100%;}
.loading{width:100%;height:90rpx;font-size:20rpx;color:#999;}
.loading image{width:30rpx;height:30rpx;margin-right:15rpx;}
/* 弹窗遮罩*/
.mask{width:100%;height:100%;position:fixed;left: 0;top: 0;background:rgba(0,0,0,0.5);display:none;}
.mask.show{display: flex;}
/*pop*/
.pop-zhezhao{width:100%;height:100%;position:fixed;top:0;left:0;z-index:1000;background:rgba(0,0,0,0.7);overflow:hidden;}
.pop-box{position:fixed;z-index:1001;left: 0;top: 0;width:100%;height:100%;}
.pop-box .top{width:500rpx;background:#fff;border-radius:15px;}
.pop-box .top .tit{font-size:16px;font-weight:bold;color:#333;text-align:center;padding-top:40rpx;display:block;}
.pop-box .top .txt1{font-size:14px;color:#999;line-height:20px;display:block;padding:0 40rpx;margin:40rpx 0;}
.pop-box .top .txt2{font-size:14px;color:#999;line-height:20px;display:block;margin:50rpx 0;text-align: center;}
.pop-box .top .txt2 .num{color:#333;font-weight:bold;margin:0 5px;}
.pop-box .top .txt-box{margin:20rpx 0 30rpx;}
.pop-box .top .txt{font-size:14px;color:#999;line-height:20px;display:block;text-align:center;}
.pop-box .top image{width:187rpx;height:187rpx;margin:0 auto 40rpx auto;display:block;}
.pop-box .btn{width:100%;height:90rpx;line-height:90rpx;text-align:center;color:#30c080;font-size:20px;position:relative;}
.pop-box .btn::after{position:absolute;content:"";width:100%;height:1px;top:0;left:0;background:#e2e2e2;transform:scaleY(.5);-webkit-transform:scaleY(.5);}
.pop-box .btn-cancle{color:#999;position: relative;}
.pop-box .btn-cancle::after{position:absolute;content:"";height:100%;width:1px;top:0;left:0;background:#e2e2e2;transform:scaleX(.5);-webkit-transform:scaleX(.5);}
.pop-box .btn-cancle1{color:#999;position: relative;}
.pop-box .btn-cancle1::after{position:absolute;content:"";height:100%;width:1px;top:0;right:0;background:#e2e2e2;transform:scaleX(.5);-webkit-transform:scaleX(.5);}
